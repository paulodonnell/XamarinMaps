<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:local="clr-namespace:XamarinMaps" 
		xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
		x:Class="XamarinMaps.XamarinMapsPage">
	<ScrollView>
		<StackLayout x:Name="stackLayout" Orientation="Vertical">
			<local:CustomMap x:Name="map"/>
			<StackLayout x:Name="searchStack" Orientation="Horizontal">
				<Entry x:Name="searchEntry"/>
				<Button x:Name="searchBtn"/>
			</StackLayout>
			<StackLayout x:Name="btnStack" Orientation="Horizontal">
				<Button x:Name="navigateBtn"/>
				<Button x:Name="showRouteBtn"/>
				<Button x:Name="clearRouteBtn"/>
				<Button x:Name="toggleLocation"/>
			</StackLayout>
		</StackLayout>
	</ScrollView>
</ContentPage>
